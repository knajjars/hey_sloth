<div class="shadow-xl rounded sm:overflow-hidden">
  <div class="px-4 py-6 sm:px-6">
    <h1 class="text-purple-600 font-black text-2xl mb-5 underline">Account settings</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="p-4 border-2 rounded">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex space-y-6 flex-col justify-center items-start w-full">
          <h2 class="font-bold">Profile details</h2>
          <div class="w-full bg-gray-200 rounded p-4">
            <div class="flex flex-col md:flex-row flex space-y-6 md:space-y-0 md:space-x-4 lg:space-x-10 xl:space-x-20 w-full">
              <div class="flex space-x-4 items-end w-full">
                <%= f.label :email, "Email", class: "text-base text-gray-700 font-bold" %>
                <div class="w-full flex flex-col space-y-2">
                  <%= f.email_field :email, class: "rounded px-2 py-1 block w-full", autocomplete: "email" %>
                </div>
              </div>

              <div class="flex space-x-4 items-end w-full">
                <%= f.label :company_name, "Company", class: "text-base text-gray-700 font-bold whitespace-nowrap" %>
                <div class="w-full flex flex-col space-y-2">
                  <%= f.text_field :company_name, class: "rounded px-2 py-1 block w-full", autocomplete: "company-name" %>
                </div>
              </div>
            </div>
          </div>
          <div class="w-full bg-gray-200 rounded p-4">
            <div class="flex flex-col md:flex-row flex space-y-6 md:space-y-0 md:space-x-4 lg:space-x-10 xl:space-x-20 w-full">
              <div class="flex space-x-4 items-end w-full">
                <%= f.label :password, "Password", class: "text-base text-gray-700 font-bold" %>
                <div class="w-full flex flex-col space-y-2">
                  <%= f.email_field :password, class: " rounded px-2 py-1 block w-full", autocomplete: "new-password" %>
                </div>
              </div>

              <div class="flex space-x-4 items-end w-full">
                <%= f.label :password_confirmation, "Confirm", class: "text-base text-gray-700 font-bold whitespace-nowrap" %>
                <div class="w-full flex flex-col space-y-2">
                  <%= f.text_field :password_confirmation, class: "rounded px-2 py-1 block w-full", autocomplete: "new-password" %>
                </div>
              </div>
            </div>
            <p class="mt-2 text-gray-500 text-xs">Leave password blank if you don't want to change it.</p>
          </div>
          <div class="flex flex-row items-center space-x-4 ml-auto items-end w-full lg:w-2/3 xl:w-2/5 p-4 bg-gray-700 rounded">
            <%= f.password_field :current_password, placeholder: "Enter current password", autocomplete: "current-password", class: "rounded px-2 py-1 w-full", required: true %>
            <%= f.submit "Save", class: "uppercase cursor-pointer inline-flex justify-center p-1 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-500" %>
          </div>
        </div>
      </div>
    <% end %>

    <h3>Linked Accounts</h3>

    <% authorizations = current_user.authorizations %>
    <% if authorizations.empty? %>
      <p>No linked account.
        <span><%= link_to 'Link Twitter', user_twitter_omniauth_authorize_path %></span>
      </p>
    <% else %>
      <% authorizations.each do |auth| %>
        <p><%= auth.provider.capitalize %>.
          <span><%= link_to 'Unlink', disconnect_authorization_path(auth.provider.downcase), data: { confirm: "Are you sure?" }, method: :delete %></span>
        </p>
      <% end %>
    <% end %>

    <h3>Public token</h3>

    <p>Use this token for the API: <strong><%= current_user.public_token %></strong></p>

    <p>
      <%= render "shared/copy_clipboard", content: get_testimonials_json_url(current_user.public_token, subdomain: 'external') %>
    </p>


    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>

  </div>
</div>