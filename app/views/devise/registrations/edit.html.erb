<div>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :company_name %><br/>
      <%= f.text_field :company_name, autofocus: true, autocomplete: "company-name" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br/>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>


  <h3>Linked Accounts</h3>

  <% authorizations = current_user.authorizations %>
  <% if authorizations.empty? %>
    <p>No linked account.
      <span><%= link_to 'Link Twitter', user_twitter_omniauth_authorize_path %></span>
    </p>
  <% else %>
    <% authorizations.each do |auth| %>
      <p><%= auth.provider.capitalize %>.
        <span><%= link_to 'Unlink', disconnect_authorization_path(auth.provider.downcase), data: { confirm: "Are you sure?" }, method: :delete %></span>
      </p>
    <% end %>
  <% end %>

  <h3>Public token</h3>

  <p>Use this token for the API: <strong><%= current_user.public_token %></strong></p>

  <p>
    <%= render "shared/copy_clipboard", content: get_testimonials_json_url(current_user.public_token, subdomain: 'external') %>
  </p>


  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

</div>