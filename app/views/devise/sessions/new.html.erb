<div class="flex items-center min-h-screen p-6 bg-gray-50">
  <div
    class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl"
  >
    <div class="flex flex-col overflow-y-auto md:flex-row">
      <div class="flex items-center justify-center p-6 sm:p-12 md:w-2/3">
        <div class="w-full">
          <h1
            class="mb-4 text-xl font-bold text-gray-700"
          >
            Log in to your account
          </h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
            <input type="hidden" name="remember_me" value="true">
            <label class="block text-sm">
              <%= f.label :email, class: "text-gray-700" %>
              <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "block w-full mt-1 text-sm-gray-600 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input border border-gray-300 p-3 rounded", placeholder: "Jane Doe" %>
            </label>

            <label class="block mt-4 text-sm">
              <%= f.label :password, class: "text-gray-700" %>
              <%= f.password_field :password, required: true, autocomplete: "current-password", class: "block w-full mt-1 text-sm focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input border border-gray-300 p-3 rounded", placeholder: "***************" %>
            </label>

            <label class="block mt-4 text-sm flex items-center justify-start">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mr-2" %>
              <%= f.label :remember_me, class: "text-gray-700" %>
            </label>
            <%= f.submit "Log in", class: "block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" %>
          <% end %>
        </div>
      </div>
      <div class="flex flex-col items-end justify-end p-6 sm:p-12 md:w-1/3">
        <p class="mt-1">
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm font-medium text-purple-600 hover:underline" %>
        </p>
        <p class="mt-1">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm font-medium text-purple-600 hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</div>