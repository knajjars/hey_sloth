<% active_class = 'bg-purple-600 text-white' %>
<% non_active_class = 'text-gray-50 hover:bg-purple-900 hover:text-white' %>
<% nav_item_class = 'px-3 py-2 rounded-md text-sm font-medium' %>

<% mobile_active_class = 'bg-purple-600 text-white' %>
<% mobile_non_active_class = 'text-gray-300 hover:bg-purple-900 hover:text-white ' %>
<% mobile_nav_item_class = 'block px-3 py-2 rounded-md text-base font-medium' %>

<div data-controller="dashboard" data-dashboard-hidden-class="hidden">
  <nav class="md:w-3/4 bg-gray-800 md:mx-auto md:rounded-2xl md:mt-5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center w-full">
          <div class="flex-shrink-0">
            <%= image_pack_tag 'media/images/hey_sloth_icon.png', class: "h-8 w-8" %>
          </div>
          <div class="hidden md:block w-full">
            <div class="flex justify-center space-x-5">
              <%= link_to "Dashboard", app_root_path, class: "#{current_controller?('dashboard') ? active_class : non_active_class } #{nav_item_class}" %>
              <%= link_to "Collect", collect_path, class: "#{current_controller?('collect') ? active_class : non_active_class } #{nav_item_class}" %>
              <%= link_to "View collected", testimonials_path, class: "#{current_controller?('testimonials') ? active_class : non_active_class } #{nav_item_class}" %>
              <%= link_to "HeyWall", app_root_path, class: "#{current_controller?('heywall') ? active_class : non_active_class } #{nav_item_class}" %>
            </div>
          </div>
        </div>
        <div data-dashboard-target="profileButton" class="hidden md:block">
          <div data-action="click@window->dashboard#clickOutsideProfile" class="flex items-center">
            <div class="relative">
              <div>
                <button data-action="click->dashboard#toggleProfile" class="max-w-xs bg-gray-800 rounded-full flex items-center text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" id="user-menu" aria-haspopup="true">
                  <span class="sr-only">Open user menu</span>
                  <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                </button>
              </div>
              <div data-dashboard-target="profileOptions" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5" role="menu" aria-orientation="vertical" aria-labelledby="user-menu">
                <%= link_to 'Account settings', edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
                <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
              </div>
            </div>
          </div>
        </div>
        <div data-action="click->dashboard#toggleMobileMenu" class="-mr-2 flex md:hidden">
          <button class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white">
            <span class="sr-only">Open main menu</span>

            <svg data-dashboard-target="menuOpenIcon" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
            <svg data-dashboard-target="menuCloseIcon" class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    </div>


    <div data-dashboard-target="mobileMenu" class="hidden md:hidden mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <%= link_to "Dashboard", app_root_path, class: "#{current_controller?('dashboard') ? mobile_active_class : mobile_non_active_class } #{mobile_nav_item_class}" %>
        <%= link_to "Collect", collect_path, class: "#{current_controller?('collect') ? mobile_active_class : mobile_non_active_class } #{mobile_nav_item_class}" %>
        <%= link_to "View collected", testimonials_path, class: "#{current_controller?('testimonials') ? mobile_active_class : mobile_non_active_class } #{mobile_nav_item_class}" %>
        <%= link_to "HeyWall", app_root_path, class: "#{current_controller?('heywall') ? mobile_active_class : mobile_non_active_class } #{mobile_nav_item_class}" %>
      </div>
      <div class="pt-4 pb-3 border-t border-gray-700">
        <div class="flex items-center px-5">
          <div class="flex-shrink-0">
            <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
          </div>
          <div class="ml-3">
            <div class="text-base font-medium leading-none text-white"><%= current_user.company_name %></div>
          </div>
        </div>
        <div class="mt-3 px-2 space-y-1">
          <%= link_to 'Account settings', edit_user_registration_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700", role: "menuitem" %>
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700", role: "menuitem" %>
        </div>
      </div>
    </div>
  </nav>

  <% unless current_user.company_name.nil? %>
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold leading-tight text-gray-700">
          <%= current_user.company_name %>
        </h1>
      </div>
    </header>
  <% end %>
  <main>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <!-- Replace with your content -->
      <%= yield %>
      <!-- /End replace -->
    </div>
  </main>
</div>