<div data-controller="clipboard tooltip" class="flex flex-col items-end bg-gray-700 text-white p-3 rounded-xl space-y-2">
  <%= text_field_tag 'copy-clipboard', content, data: { "clipboard-target": "source", "action": "focus->clipboard#copy click->tooltip#show" }, readonly: "readonly", class: "bg-gray-700 w-full" %>
  <%= button_tag data: { "action": "click->clipboard#copy click->tooltip#show", tooltip_target: 'destination' }, "tooltip-left": true, "tooltip-content": "Copied!" do %>
    <%= content_tag :div, class: "flex space-x-2 items-center bg-purple-500 rounded-xl text-white px-2 py-1 font-medium" do %>
      <p>Copy</p>
      <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path d="M8 2a1 1 0 000 2h2a1 1 0 100-2H8z"/>
        <path d="M3 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v6h-4.586l1.293-1.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L10.414 13H15v3a2 2 0 01-2 2H5a2 2 0 01-2-2V5zM15 11h2a1 1 0 110 2h-2v-2z"/>
      </svg>
    <% end %>
  <% end %>
</div>