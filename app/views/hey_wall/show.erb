<div data-controller="code-highlight" class="code-snippet">
  <pre>
    <code class="language-html">
      &lt;div id="testimonials" data-heywall-id=<%= current_user.public_token %>&gt;&lt;/div&gt;
      &lt;script src="<%= embed_url(format: :js) %>"&gt;&lt;/script&gt;
      &lt;link rel="stylesheet" type="text/css" href="<%= embed_url(format: :css) %>"&gt;
    </code>
  </pre>

  <div>
    <h2 class="font-black text-purple-600 text-3xl">Preview of HeyWall</h2>
    <div id="testimonials" data-heywall-id="<%= current_user.public_token %>"></div>
    <%= javascript_pack_tag "embed", 'data-turbolinks-track': 'reload' %>
  </div>

</div>
<% content_tag :div, nil, data: { test: true } unless Rails.env.production? %>
<span id="is-testimonial-test" data-test="true"></span>
<%= javascript_pack_tag 'highlight', 'data-turbolinks-track': false %>

