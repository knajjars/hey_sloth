    <%= form.label :allowed_sources_video, 'Video' %>
    <%= form.radio_button :allowed_sources, 'video' %>

    <%= form.label :allowed_sources_text, 'Text' %>
    <%= form.radio_button :allowed_sources, 'text' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
