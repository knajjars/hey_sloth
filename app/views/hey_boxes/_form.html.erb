<%= form_with(model: hey_box) do |form| %>
  <% if hey_box.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hey_box.errors.count, "error") %> prohibited this hey_box from being saved:</h2>

      <ul>
        <% hey_box.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tag %>
    <%= form.text_field :tag %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div class="field">
    <%= form.label :social_link_required %>
    <%= form.check_box :social_link_required %>
  </div>

  <div class="field">
    <%= form.label :email_required %>
    <%= form.check_box :email_required %>
  </div>

  <div class="field">
    <%= form.label :job_required %>
    <%= form.check_box :job_required %>
  </div>

  <div class="field">
    <%= form.label :allowed_sources_video_or_text, 'Video or Text' %>
