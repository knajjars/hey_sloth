<p id="notice"><%= notice %></p>

<h1>Hey Boxes</h1>

<table>
  <thead>
  <tr>
    <th>Tag</th>
    <th>Note</th>
    <th>Social link required</th>
    <th>Email required</th>
    <th>Job required</th>
    <th>Allowed sources</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @hey_boxes.each do |hey_box| %>
    <tr>
      <td><%= hey_box.tag %></td>
      <td><%= hey_box.note %></td>
      <td><%= hey_box.social_link_required %></td>
      <td><%= hey_box.email_required %></td>
      <td><%= hey_box.job_required %></td>
      <td><%= hey_box.allowed_sources.humanize %></td>
      <td><%= link_to 'Show', hey_box %></td>
      <td><%= link_to 'Edit', edit_hey_box_path(hey_box) %></td>
      <td><%= link_to 'Destroy', hey_box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hey Box', new_hey_box_path %>
