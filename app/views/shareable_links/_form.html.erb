<%= form_with(model: shareable_link) do |form| %>
  <% if shareable_link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shareable_link.errors.count, "error") %> prohibited this shareable link from being saved:</h2>

      <ul>
        <% shareable_link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tag %>
    <%= form.text_field :tag %>
  </div>

  <div class="field">
    <%= form.label :social_link_required %>
    <%= form.check_box :social_link_required %>
  </div>

  <div class="field">
    <%= form.label :job_required %>
    <%= form.check_box :job_required %>
  </div>

  <div class="field">
    <%= form.label :image_required %>
    <%= form.check_box :image_required %>
  </div>

  <div class="field">
    <%= form.label :logo %>
    <%= form.file_field :logo, accept: "image/png, image/jpg, image/jpeg" %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.rich_text_area :note %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
