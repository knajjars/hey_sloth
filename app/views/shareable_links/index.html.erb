<div class="grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-5 mb-16">
  <% @shareable_link.each do |shareable_link| %>
    <div class="bg-white rounded shadow-lg p-6 w-full flex flex-col justify-between items-between space-y-3">
      <h1 class="font-black text-purple-600 text-2xl"><%= shareable_link.tag %></h1>
      <%= render "shared/copy_clipboard", key: shareable_link.slug, content: collect_from_shareable_link_new_url(shareable_link.slug, subdomain: false) %>
      <%= shareable_link.note if shareable_link.note.present? %>
      <div class="flex flex-col">
        <% [{ "Social link required?": shareable_link.social_link_required }, { "Job & Company required?": shareable_link.job_required }, { "Image required": shareable_link.image_required }].each do |item| %>
          <% item.each do |key, required| %>
            <div class="flex flex-row justify-between items-center">
              <p class="font-bold text-gray-800"><%= key %></p>
              <% if required %>
                <svg class="w-5 h-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              <% else %>
                <svg class="w-5 h-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"/>
                </svg>
              <% end %>
          <% end %>
          </div>
        <% end %>
      </div>
      <div class="flex flex-col border-t space-y-4">
        <div class="flex flex-row space-x-3 justify-end items-center pt-5">
          <%= link_to collect_send_email_new_path(shareable_link.slug), class: "w-10 h-8 flex justify-center items-center text-white bg-gray-600 rounded mr-auto", tooltip: true, "tooltip-right": true, "tooltip-content": "Send email with my link" do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
          <% end %>

          <%= link_to edit_shareable_link_path(shareable_link), class: "w-10 h-8 bg-yellow-300 hover:bg-yellow-500 text-white rounded flex justify-center items-center" do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"/>
              <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"/>
            </svg>
          <% end %>
          <%= link_to shareable_link, method: :delete, data: { confirm: 'Continue with deletion?' }, class: "w-10 h-8 box-border hover:bg-red-400 hover:text-white border-2 border-red-400 text-red-400 rounded flex justify-center items-center" do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
          <% end %>
        </div>
        <p>
          <strong>Collected:</strong>
          <%= "#{shareable_link.testimonials.count} testimonial#{"s" if shareable_link.testimonials.count != 1}" %>
        </p>
      </div>
    </div>
  <% end %>

  <div class="border-dotted border-4 border-gray-300 rounded shadow-lg w-full bg-yellow-100 hover:bg-yellow-200 text-yellow-500 hover:text-yellow-600 hover:underline">
    <%= link_to new_shareable_link_path do %>
      <div class="flex justify-center items-center h-full w-full">
        <p class="font-black text-3xl p-6 md:text-5xl uppercase">Add new</p>
      </div>
    <% end %>
  </div>
</div>

