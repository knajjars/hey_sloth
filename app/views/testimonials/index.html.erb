<p id="notice"><%= notice %></p>

<h1>Testimonials</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Role</th>
    <th>Social link</th>
    <th>Content</th>
    <th>Source</th>
    <th>Showcase</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @testimonials.each do |testimonial| %>
    <tr>
      <td><%= testimonial.name %></td>
      <td><%= testimonial.company %></td>
      <td><%= testimonial.role %></td>
      <td><%= testimonial.social_link %></td>
      <td><%= testimonial.rich_text_or_content %></td>
      <td><%= testimonial.source.capitalize %></td>
      <td><%= button_to "#{testimonial.showcase.yesno}", toggle_showcase_testimonial_path(testimonial), method: :post %></td>
      <td><%= formatted_date testimonial.created_at, with_time_passed: false %></td>
      <td><%= link_to 'Show', testimonial %></td>
      <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>